
@model List<day_02_workshop.Models.BankAccount>
@{
    ViewData["Title"] = "ShowCharacters";

}

<style>
    table, td, th {
        border: 1px solid black;
    }

    td, th {
        text-align: center
    }
</style>

<h2>ShowCharacters</h2>

<table>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Balance</th>
        <th>AnimalType</th>
        <th>King</th>
        <th>Good/Bad</th>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
    {
        string color;
        bool isKing;

        if (Model[i].IsKing)
        {
            color = "gold";
            isKing = true;
        }
        else
        {
            color = "black";
            isKing = false;
        }

        <tr style="color: @color">
            <td>@i</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].Balance</td>
            <td>@Model[i].AnimalType</td>
            <td>@isKing</td>

            @switch (Model[i].GoodOrBad)
            {
                case true:
                    <td>Good One</td>
                    break;
                case false:
                    <td>Bay Guy</td>
                    break;
            }
        </tr>
    }
</table>